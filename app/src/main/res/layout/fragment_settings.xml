<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:background="@drawable/settbackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:layout_above="@id/layout">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/settheder"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_below="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/update_theme"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изменить тему" android:textStyle="italic"
                android:textSize="18sp" android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/notification"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Уведомления" android:textStyle="italic"
                android:textSize="18sp" android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/rules"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Правила" android:textStyle="italic"
                android:textSize="18sp" android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/feedback"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Жалобы и предложения"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/grey"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>